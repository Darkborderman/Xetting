doctype html
html
  head
    link(rel='stylesheet', type='text/css', href='css/detail.css')
    script(defer src='js/jszip.min.js')
    script(defer src='js/FileSaver.min.js')
    script(defer src='js/index.js')
  body
    .navbar Xetting
    .content
      .sidebar
      .detail
        .description
          .description-image
          img(src=thumbnails[0], width='240px')
          .description-text
            .text-title Title:#{title}
            .text-artist Artists
            - var a=artists;
            each artist in a
              span #{artist}
            .text-tag Tag
            - var t=tags;
            each tag in t
              span #{tag}
            .text-url Origin URL: #{originUrl}
            .download(id="download") Download me
        .images
          - var i=thumbnails;
          each thumbnail in i
           img(src=thumbnail, width='240px')
      .sidebar
